<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.redcells.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="Some cool caption here :)"
        android:textColor="#008000"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="-9dp"

        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/user"
        android:layout_marginLeft="-9dp"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/button2"

        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_alignLeft="@+id/button2" />

    <TextView

        android:text="Name : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"

        android:layout_toStartOf="@+id/button2"
        android:layout_toLeftOf="@+id/button2" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText3"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="Mobile : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignLeft="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Blood Type:"
        android:layout_below="@id/textView10"
        android:layout_marginTop="24dp"

        android:layout_alignEnd="@+id/textView9"
        android:layout_alignRight="@+id/textView9" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/blood_type"
        android:ems="10"
        android:id="@+id/spinner"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"

        android:layout_alignStart="@+id/editText3"

        android:layout_alignEnd="@+id/textView2"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignRight="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"

        android:layout_below="@+id/spinner"
        android:layout_marginTop="25dp"
        android:text="Locality:"
        android:layout_alignRight="@+id/textView" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinner"

        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@+id/spinner"

        android:layout_marginEnd="-29dp"

        android:drawableEnd="@drawable/ic_gps_fixed_black_24dp"
        android:text="Tap to detect"
        android:textSize="14sp"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignRight="@+id/spinner"
        android:layout_marginRight="-29dp"
        android:drawableRight="@drawable/ic_gps_fixed_black_24dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="#f31c45"
        android:text="ADD"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/agee"
        android:layout_alignBottom="@+id/agee"
        android:layout_alignStart="@+id/textView4"
        android:text="D.O.B"
        android:layout_alignLeft="@+id/textView4" />

    <EditText
        android:id="@+id/agee"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"

        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="11dp"
        android:inputType="date"
        android:layout_alignLeft="@+id/textView18" />


</RelativeLayout>